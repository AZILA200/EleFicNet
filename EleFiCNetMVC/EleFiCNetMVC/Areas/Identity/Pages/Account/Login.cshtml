@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<body>

    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img class="img-fluid" src="~/media/login.jpg" alt=" ">
                </div>
                  <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    <form id="account" method="post">
                        <div class="d-flex align-items-center mb-1 pb-1">
							<h1 class=" fw-bold ">Login</h1>       
                        </div>
						<h5 class="fw-normal mb-1 pb-1" style="letter-spacing: 1px;">Hello, Welcome Back</h5>
					    <hr/> 

                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Enter your Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3 ">
                            
                             <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                             <label asp-for="Input.Password" class="form-label">Enter your Password</label>
                             <span asp-validation-for="Input.Password" class="text-danger"></span>
                          </div>

                        <div class="checkbox mb-3 d-flex justify-content-between">
                            <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                             </label>

                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>

                         </div>

                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                        </div>

                        <div class="d-flex align-items-center justify-content-center pb-4 p-3">
                            <p class="mb-0 me-2">Don't have an account?
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                            </p>
					    </div>
                   </form>
                </div>
            </div>
        </div>
        
    </section>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</body>