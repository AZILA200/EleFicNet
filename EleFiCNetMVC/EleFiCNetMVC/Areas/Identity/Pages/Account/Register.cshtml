@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<body>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img class="img-fluid" src="~/media/login.jpg" alt=" ">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1 p-3">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                         <div class="d-flex align-items-center mb-1 pb-1">
							<h1 class=" fw-bold ">Sign up.</h1>
                         </div>
                        <h5 class="fw-normal mb-1 pb-1" style="letter-spacing: 1px;">Hello, Welcome to EleficNet</h5>
                         <hr/>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3 ">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Enter your Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 ">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Enter your Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 ">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary ">Register</button>
                        <div class="d-flex align-items-center justify-content-center pb-4 p-3">
                            <p class="mb-0 me-2">
                                Already have an account?
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
   </section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</body>